@using BarkodWeb.Entity.ViewModels.Shops;
@model ShopViewModel

<div class="container-xxl flex-grow-1 container-p-y">


    <div class="card mb-4">


        <div class="row">
            <!-- Basic -->
            <form method="post">
                <div class="col-12">


                    <div class="card-body mt-5">
                        <div class="border border-dark">
                            <div class="m-4">
                                <h3 class="text-center">Mağaza Ekle</h3>

                                <div class="form-floating my-3">
                                    <input asp-for="Adı" type="text" class="form-control" id="floatingInput" aria-describedby="floatingInputHelp">
                                    <label for="floatingInput">Mağaza</label>
                                </div>














                                <div class="row">


                                    <div class="col text-center">
                                        <div class="btn-group p-2">
                                            <button asp-action="ShopAdd" asp-controller="Setting" style="font-size:2rem;" type="submit" class="btn btn-outline-success btn-block ">Ekle</button>
                                        </div>

                                    </div>



                                </div>


                            </div>

                        </div>


                    </div>


                </div>



            </form>










            <!-- listeleme -->
            <div class="col-12 ">



                <div class="card-body ">

                    <h3 class="text-center">Satış Listesi</h3>

                    <div class="row">
                        <div class="table-responsive" id="eklenen_div_scroll" style="font-size:12px;height:600px;overflow-y:scroll;margin:0px;" align="left" valign="top">
                            <table class="table table-striped table-bordered table-hover " id="datatable-responsive">


                                <thead>
                                    <tr>
                                        <th class="bg-primary" style="width: 110px; position:sticky; top: 0 ; ">

                                            <input class="form-control " type="search" placeholder="Mağaza" id="html5-search-input">

                                        </th>
                                        <th class="bg-success" style="width: 5px;position:sticky; top: 0 ; "> İşlem </th>







                                    </tr>
                                </thead>


                                <tbody>

                                    @foreach (var sale in ViewBag.Shops)
                                    {


                                        <tr>
                                            <td>@sale.Adı</td>

                                            <td>
                                                <div class="row">

                                                    <div class="col-6">





                                                        <!-- Button trigger modal -->
                                                        <a class="" data-bs-toggle="modal" data-bs-target="#exampleModal " title="Silme İşlemi">


                                                            <i class="menu-icon tf-icons bx bxs-folder-minus bx-burst-hover"></i>

                                                        </a>

                                                        <!-- Modal -->
                                                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="exampleModalLabel">Dikkat Ediniz!!</h5>
                                                                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        Mağaza silerken mağazaya baglı olan personeller ve mağaza hakkındaki bütün işlemler silinecektir
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                                                         <form asp-action="Delete" asp-controller="Product" method="post">

                                                                        <button data-itemid="@sale.Id" asp-controller="Setting" asp-action="Delete" asp-route-ShopId="@sale.Id" type="submit" class="btn btn-primary">Sil</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>







                                                        @*
                                                    <form asp-action="Delete" asp-controller="Product" method="post">

                                                    <a data-itemid="@sale.Id" asp-controller="Setting" asp-action="Delete" asp-route-ShopId="@sale.Id" class="menu-link" title="Silme İşlemi">

                                                    <i class="menu-icon tf-icons bx bxs-folder-minus bx-burst-hover"></i>

                                                    </a>

                                                    </form>*@
                                                    </div>


                                                </div>



                                            </td>
                                        </tr>
                                    }
                                </tbody>






                            </table>
                        </div>

                    </div>



                </div>

            </div>
        </div>
    </div>







</div>












