@using BarkodWeb.Entity.Entities;

@model List< Shop>


@foreach (var item in Model)
{
    if (item.Id == @ViewBag.UserShop)
    {



        <a href="javascript:void(0);" class="menu-link menu-toggle text-center bg-dark text-white">
            <i class="menu-icon tf-icons bx bxs-cog"></i>
            <div  data-i18n="Form Elements">@item.Adı</div>
        </a>

    }
   
}
@foreach (var item in Model)
{

    if (item.Id != @ViewBag.UserShop)
    {



                <ul class="menu-sub">
                    <li class="menu-item">

                <a asp-action="Update" asp-controller="User" asp-route-Id="@item.Id" class="menu-link text-center bg-dark text-white">

                            <div data-i18n="Basic">@item.Adı</div>
                        </a>
                    </li>


                </ul>

    }


}