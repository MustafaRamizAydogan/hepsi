@using BarkodWeb.Entity.ViewModels.Stocks;
@model StockUpdateViewModel
<div class="container-xxl flex-grow-1 container-p-y">

    <form asp-action="Update" asp-controller="Product" method="post">
        <div class="card mb-4">
            <h3 class="card-header text-center">Ürün Güncelleme</h3>

            <div class="row">
                <!-- Basic -->
                <div class="col-md-6">


                    <div class="card-body">

                        <div class="form-floating mt-3">
                            <input asp-for="Barkod" type="text" class="form-control" id="floatingInput" placeholder="John Doe" aria-describedby="floatingInputHelp">
                            <label for="floatingInput">Barkod</label>
                            <input type="hidden" asp-for="Id" />
                        </div>



                        <div class="row my-4">

                            <div class="col-3">
                                <label class="" for="floatingInput">Türü</label>
                                <select asp-for="ParaKuru" class="form-select" id="inputGroupSelect03" aria-label="Example select with button addon">

                                    <option value="1">Dolar</option>
                                    <option value="2">Tl</option>

                                </select>
                            </div>
                            <div class="col-9">
                                <label class="" for="floatingInput">Alış Fiyatı</label>

                                <input asp-for="AlisFiyat" id="defaultInput" class="form-control" type="text" placeholder="Alış Fiyatını giriniz.">

                            </div>


                        </div>


                        <div class="row">

                            <div class="col-3">
                                <label for="floatingInput">Türü</label>
                                <select class="form-select" id="inputGroupSelect03" aria-label="Example select with button addon">

                                    <option value="1">Dolar</option>
                                    <option value="2">Tl</option>

                                </select>
                            </div>
                            <div class="col-9">
                                <label for="floatingInput">Satış Fiyatı</label>

                                <input asp-for="SatisFiyat" id="defaultInput" class="form-control" type="text" placeholder="Satış Fiyatını giriniz.">

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Merged -->
                <div class="col-md-6">
                    <div class="card-body">

                        <div class="mb-3">
                            <label for="defaultSelect" class="form-label">Ürün Birimi</label>
                            <select asp-for="UrunBirimi" id="defaultSelect" class="form-select">

                                <option value="1">Gram</option>
                                <option value="2">Adet</option>

                            </select>
                        </div>

                        <div class="my-3">
                            <label for="defaultInput" class="form-label">Adet</label>
                            <input asp-for="Stok" id="defaultInput" class="form-control" type="text" placeholder="Adet giriniz.">
                        </div>

                        <div class="mb-3">
                            <label for="defaultInput" class="form-label">Gram</label>
                            <input asp-for="Gram" id="defaultInput" class="form-control" type="text" placeholder="Gram giriniz.">
                        </div>

                    </div>

                </div>
            </div>
        </div>




        <div class="row">


            <div class="col">
                <div class="card">


                    <div class="card-body">

                        <div class="row">



                            <div class="col-8">
                                <label for="largeSelect" class="form-label mb-0">Ana Grup</label>
                                <select id="largeSelect" class="form-select form-select-lg" asp-for="MainGroupId" asp-items="@(new SelectList(Model.MainGroups,"Id","AnaGrup"))"></select>
                            </div>

                            <div class="col-4">
                                <div class=" input-group mt-4">
                                    <input asp-for="AnaGrup" type="text" class="form-control" placeholder="Ana Grup..." aria-label="Recipient's username" aria-describedby="button-addon2">
                                    <button asp-action="AddMainGroup" asp-controller="Product" class="btn btn-outline-primary" type="submit" id="button-addon2">Ekle</button>
                                </div>

                            </div>
                        </div>


                        <div class="row my-3">



                            <div class="col-8">
                                <div class="mb-3">
                                    <label for="defaultSelect" class="form-label mb-0">Alt Grup</label>

                                    <select id="defaultSelect" class="form-select form-select-lg" asp-for="LowerGroupId" asp-items="@(new SelectList(Model.lowerGroups,"Id","AltGrup"))"></select>

                                </div>

                            </div>
                            <div class="col-4">




                                <div class="input-group mt-4">
                                    <input asp-for="AltGrup" type="text" class="form-control" placeholder="Alt Grup..." aria-label="Recipient's username" aria-describedby="button-addon2">
                                    <button asp-action="AddLowerGroup" asp-controller="Product" class="btn btn-outline-primary" type="submit" id="button-addon2">Ekle</button>
                                </div>

                            </div>

                        </div>


                        <div class="row">

                            <button class="btn btn-primary btn-lg" type="submit">Kaydet</button>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </form>
</div>



