@using BarkodWeb.Entity.ViewModels.Stocks;
@model List<StockViewModel>

<div class="container-xxl flex-grow-1 container-p-y">


    <div class="card mb-4">



        <div class="card-body ">

            <h3 class="text-center">Stok Listesi</h3>

            <div class="row">
                <div class="table-responsive" id="eklenen_div_scroll" style="font-size:13px;height:600px;overflow-y:scroll;margin:0px;" align="left" valign="top">
                    <table class="table table-striped table-bordered table-hover " id="datatable-responsive">


                        <thead>
                            <tr>
                                <th class="bg-danger" style="width: 110px; position:sticky; top: 0 ; ">

                                    <input class="form-control " type="search" placeholder="BARKOD" id="html5-search-input">

                                </th>
                                <th class="bg-secondary  text-white text-center" style="width: 5px;position:sticky; top: 0 ; "> STOK </th>
                                <th class="bg-dark  text-white text-center" style="width: 5px; position:sticky; top: 0 ; "> GRAM </th>
                                <th class="bg-secondary  text-white  text-center" style="width: 10px;  position:sticky; top: 0 ; "> A.FİYAT </th>

                                <th class="bg-dark  text-white text-center" style="width: 10px;position:sticky; top: 0 ; "> S.FİYAT </th>
                                <th class="bg-secondary  text-white text-center" style="width: 100px; position:sticky; top: 0 ; "> ANA GRUP </th>
                                <th class="bg-dark  text-white text-center" style="width: 100px; position:sticky; top: 0 ; "> ALT GRUP </th>
                                <th class="bg-secondary  text-white text-center" style="width: 50px; position:sticky; top: 0 ; "> TARİH </th>
                                <th class="bg-danger text-white text-center" style="width: 30px; position:sticky; top: 0 ; "> İŞLEM </th>






                            </tr>
                        </thead>

                  



                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Barkod</td>
                                    <td>@item.Stok</td>
                                    <td>@item.Gram</td>
                                    <td>@item.AlisFiyat</td>
                                    <td>@item.SatisFiyat</td>
                                    <td>@item.MainGroup.AnaGrup</td>
                                    <td>@item.LowerGroup.AltGrup</td>
                                    <td>@item.Tarih</td>
                                    <td>
                                        <div class="row">

                                            <div class="col-6">
                                                <a data-itemid="@item.Id" asp-controller="Product" asp-action="Update" asp-route-StockId="@item.Id" class="menu-link" title="Güncelleme İşlemi">
                                                    <i class="menu-icon tf-icons bx bxs-folder-plus bx-burst-hover"></i>


                                                </a>
                                            </div>
                                            <div class="col-6">
                                                
                                                <form asp-action="Delete" asp-controller="Product" method="post">

                                                    <a data-itemid="@item.Id" asp-controller="Product" asp-action="Delete" asp-route-StockId="@item.Id" class="menu-link" title="Silme İşlemi">
                                                       
                                                        <i class="menu-icon tf-icons bx bxs-folder-minus bx-burst-hover"></i>

                                                    </a>
                                                   
                                                </form>
                                            </div>


                                        </div>



                                    </td>
                                </tr>
                            }
                        </tbody>





                    </table>
                </div>

            </div>



        </div>
    </div>
</div>